<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_margin_normal"
            android:background="@color/colorWhite100"
            android:fitsSystemWindows="true">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:animateLayoutChanges="true"
                android:padding="@dimen/activity_margin_normal">

                <TextView
                    android:id="@+id/tv_bannerTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_large"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Banner Title" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_banner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@+id/iv_headerBanner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bannerTitle" />

                <ImageView
                    android:id="@+id/iv_headerBanner"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_margin_normal"
                    android:contentDescription="@string/img_banner"
                    android:src="@drawable/ic_reward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/rv_banner"
                    app:layout_constraintTop_toBottomOf="@id/tv_bannerTitle" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_margin_medium"
                android:paddingBottom="@dimen/activity_margin_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_banner">

                <LinearLayout style="@style/fab_container">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/fab_home_icon"
                        android:backgroundTint="@color/colorHomeMap"
                        android:src="@drawable/ic_map" />

                    <TextView
                        style="@style/fab_home_label"
                        android:text="@string/label_map" />
                </LinearLayout>

                <LinearLayout style="@style/fab_container">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/fab_home_icon"
                        android:backgroundTint="@color/colorHomeSave"
                        android:src="@drawable/ic_save" />

                    <TextView
                        style="@style/fab_home_label"
                        android:text="@string/label_save" />
                </LinearLayout>

                <LinearLayout style="@style/fab_container">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/fab_home_icon"
                        android:backgroundTint="@color/colorHomeReport"
                        android:src="@drawable/ic_report" />

                    <TextView
                        style="@style/fab_home_label"
                        android:text="@string/label_report" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/large_text" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>