<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:paddingTop="@dimen/content_margin_normal"
    android:paddingBottom="@dimen/content_margin_normal"
    android:background="@color/colorWhite100"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/cl_banner"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout style="@style/fab_container">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/fab_home_icon"
            android:backgroundTint="@color/colorHomeMap"
            android:src="@drawable/ic_map" />

        <TextView
            style="@style/fab_home_label"
            android:text="@string/label_map" />
    </LinearLayout>

    <LinearLayout style="@style/fab_container">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/fab_home_icon"
            android:backgroundTint="@color/colorHomeSave"
            android:src="@drawable/ic_save" />

        <TextView
            style="@style/fab_home_label"
            android:text="@string/label_save" />
    </LinearLayout>

    <LinearLayout style="@style/fab_container">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            style="@style/fab_home_icon"
            android:backgroundTint="@color/colorHomeReport"
            android:src="@drawable/ic_report" />

        <TextView
            style="@style/fab_home_label"
            android:text="@string/label_report" />
    </LinearLayout>

</LinearLayout>